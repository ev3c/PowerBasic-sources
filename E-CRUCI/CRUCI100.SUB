'บ  Permite seleccionar un trozo de la pantalla y mediante las teclas del    บ
'บ  cursor desplazarse por el hasta pulsar INTRO o ESC.                      บ
'ศอออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออออผ
SUB CursorCruci(LENY%,LENX%)
LOCAL T$,DIRE%,M$,Y1%,X1%,Y2%,X2%
SHARED MCruciDat$()
Y1% = 3
X1% = 2
Y2% = 25-((Leny%+1)*2)
X2% = 80-(Lenx%*4)+1
COLOR 15,0
LOCATE Y1%+1,X1%+1,1
DO
T$ = UCASE$(INKEY$)
IF M$<>"" THEN SWAP T$,M$
SELECT CASE T$
  CASE CHR$(&H00)+CHR$(&H4B)                    'CURSOR HACIA LA IZQUIERDA
    IF POS(0) > 1+X1% THEN
       LOCATE CSRLIN,POS(0)-4
    ELSE
      IF CSRLIN > 1+Y1% THEN
         LOCATE CSRLIN-2,80-X2%
      ELSE
         LOCATE 25-Y2%,80-X2%
      END IF
    END IF

  CASE CHR$(&H00)+CHR$(&H4D)                    'CURSOR HACIA LA DERECHA
    DIRE% = 0
    IF POS(0)< 80-X2% THEN
       LOCATE CSRLIN,POS(0)+4
    ELSE
      IF CSRLIN < 25-Y2% THEN
         LOCATE CSRLIN+2,1+X1%
      ELSE
         LOCATE 1+Y1%,1+X1%
      END IF
    END IF

  CASE CHR$(&H00)+CHR$(&H48)			'CURSOR ARRIBA
    IF CSRLIN > 2+Y1% THEN
       LOCATE CSRLIN-2,POS(0)
    ELSE
      IF POS(0) > X1%+1 THEN
        LOCATE 25-Y2%,POS(0)-4
      ELSE
        LOCATE 25-Y2%,80-X2%
      END IF
    END IF

  CASE CHR$(&H00)+CHR$(&H50)                    'CURSOR HACIA ABAJO
    DIRE% = 1
    IF CSRLIN < 25-Y2% THEN
       LOCATE CSRLIN+2,POS(0)
    ELSE
      IF POS(0) < 80-X2% THEN
        LOCATE 1+Y1%,POS(0)+4
      ELSE
        LOCATE 1+Y1%,1+X1%
      END IF
    END IF

  CASE CHR$(&H00)+CHR$(&H47)                    'CURSOR A ORIGEN
    LOCATE CSRLIN,1+X1%

  CASE CHR$(&H00)+CHR$(&H4F)                    'CURSOR A FIN
    LOCATE CSRLIN,80-X2%

  CASE CHR$(&H00)+CHR$(&H49)			'PAGINA ARRIBA
    LOCATE 1+Y1%,POS(0)

  CASE CHR$(&H00)+CHR$(&H51)			'PAGINA ABAJO
    LOCATE 25-Y2%,POS(0)

  CASE CHR$(&H00)+CHR$(&H53)                    'BORRAR
    MCruciDat$((CSRLIN-2)\2,(POS(0)+1)\4) = ""
    PRINT " ";
    LOCATE CSRLIN,POS(0)-1

  CASE ELSE                                     'IMPRIME CARACTER o CUADRO
    IF (T$>="A" AND T$<="Z")_
       OR T$="ฅ" OR T$="" OR T$=" " THEN				

	  IF T$=" " THEN
	     MCruciDat$((CSRLIN-2)\2,(POS(0)+1)\4) = CHR$(&HDB)
	     PRINT CHR$(&HDB);
	  ELSE		
	     MCruciDat$((CSRLIN-2)\2,(POS(0)+1)\4) = T$
	     PRINT T$;
          END IF
	  LOCATE CSRLIN,POS(0)-1
	  IF DIRE% = 0 THEN
	     M$ = CHR$(&H00)+CHR$(&H4D)
	  ELSE
	     M$ = CHR$(&H00)+CHR$(&H50)
	  END IF
    ELSE
	    IF T$<>"" AND T$<>CHR$(&H1B) THEN PRINT CHR$(7);
    END IF
 END SELECT
LOOP UNTIL T$=CHR$(&H1B)
MX%=POS(0)
MY%=CSRLIN
END SUB



