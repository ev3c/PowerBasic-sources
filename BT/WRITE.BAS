'EJEMPLO DE GESTION DE UN FICHERO BTRIEVE
	OPEN "NUL" AS 1 LEN=28
	FIELD #1,8 AS CLA$,10 AS NOMBRE$,10 AS TELEFONO$
	OP%=0
	NUM.CLAVE%=0
	CLAVE$="CLIENTE"+CHR$(0)
	LONG%=28
	FCB1%=VARPTR(#1)
	FCB%=FCB1%
	GOSUB BTRIEVE
'ESCRITURA DE  UN REGISTRO
	OP%=2
	CLAVE$="LUIS    "
	LSET CLA$=CLAVE$:LSET NOMBRE$="LUIS PABLO":LSET TELEFONO$="6851418"
	NUM.CLAVE%=0
	LONG%=28
	FCB%=FCB1%
	GOSUB BTRIEVE
'CIERRE DE FICHERO
	OP%=1
	NUM.CLAVE%=0
	LONG%=28
	FCB%=FCB1%
	GOSUB BTRIEVE
	CLOSE

END

BTRIEVE:

	CALL BTRV(OP%,STATUS%,FCB%,LONG%,CLAVE$,NUM.CLAVE%)
	RETURN


