'EJEMPLO DE GESTION DE UN FICHERO BTRIEVE
	OPEN "NUL" AS 1 LEN=28
	FIELD #1,8 AS CLA$,10 AS NOMBRE$,10 AS TELEFONO$
	OP%=0
	NUM.CLAVE%=0
	CLAVE$="CLIENTE"+CHR$(0)
	LONG%=28
	FCB1%=VARPTR(#1)
	FCB%=FCB1%
	GOSUB BTRIEVE

'LECTURA DE  UN REGISTRO
	OP%=5
	CLAVE$="LUIS"+SPACE$(4)
	NUM.CLAVE%=0
	LONG%=28
	FCB1%=VARPTR(#1)
	FCB%=FCB1%
	GOSUB BTRIEVE
	PRINT NOMBRE$
	PRINT TELEFONO$
	PRINT STATUS

'CIERRE DE FICHERO
	OP%=1
	NUM.CLAVE%=0
	LONG%=28
	FCB%=FCB1%
	GOSUB BTRIEVE
	CLOSE 1

END

BTRIEVE:

	CALL BTRV(OP%,STATUS%,FCB%,LONG%,CLAVE$,NUM.CLAVE%)
	RETURN


